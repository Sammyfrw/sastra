<h2><%= @announcement.title %></h2>
<h4>by <%= link_to @user.username, @user %></h4>

<div class="announcement_body">
  <%= @announcement.body %>
</div>

<div class="announcement_comments">
  <% if @flagged %>
    <%= button_to "Unflag", flag_path, method: :delete %>
  <% else %>
    <%= button_to "Flag as inappropriate", [@announcement, @flag] %>
  <% end %>
  <h3>Comments</h3>
  <div>
    <%= render @comments %>
  </div>
  <%= form_for [@announcement, @comment] do |form| %>
    <%= form.label :text, "New Comment" %>
    <%= form.text_area :text %>
    <%= form.submit "Post" %>
  <% end %>
</div>

<div class="control_buttons">
  <% if current_user == @user %>
    <%= link_to "Edit Announcement", [:edit, @announcement] %>
    <%= button_to "Delete Announcement", @announcement, method: :delete %>
  <% end %>
</div>

<h2> <%= @book.title %> </h2>

<% if @book.authors.exists?(current_user) %>
  <%= link_to "Edit Book", [:edit, @book] %>
<% end %>
<%= render "flags/flag_buttons", flaggable: @book, flag: @flag, flagged: @flagged %>

<div class="book_image">
  <%= image_tag @book.image_url.thumb.url %>
</div>

<ul>
  <li>Title: <%= @book.title %></li>
  <li>Author: <%= render @book.authors %></li>
  <li>Genre: <%= @book.genre %></li>
  <li>Status: <%= @book.status %></li>
  <li>Edition: <%= @book.edition %></li>
  <li>Format: <%= @book.format %></li>
  <li>ISBN-10: <%= @book.ISBN_10%></li>
  <li>ISBN-13: <%= @book.ISBN_13%></li>

  <li>Publisher: <%= render @book.publishers %></li>
  <li>Published Date: <%= @book.published %></li>
</ul>

<p><b>Description</b>: <%= @book.description %> </p>

<h3> Shops that sell this book: </h3>
  <ul>
    <%= render @book.shops %>
  </ul>

<div class="book_comments">
<h3>Comments</h3>
  <div>
    <%= render @comments %>
  </div>
  <%= form_for [@book, @comment] do |form| %>
    <%= form.label :text, "New Comment" %>
    <%= form.text_area :text %>
    <%= form.submit "Post" %>
  <% end %>
</div>

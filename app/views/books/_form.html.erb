<div class="form_field">
  <%= form.label "Title" %>
  <%= form.text_field :title %>
</div>
<div class="form_field">
  <%= form.label "Author" %>
  <%= form.collection_check_boxes(:author_ids, @users, :id, :username) %>
</div>
<div class="form_field">
  <%= form.label "Status" %>
  <%= form.collection_select :status, Book::STATUS, :to_s, :to_s, include_blank: true %>
</div>
<div class="form_field">
  <%= form.label "Format" %>
  <%= form.text_field :format %>
</div>
<div class="form_field">
  <%= form.label :image_url, "Image" %>
  <%= form.file_field :image_url %>
</div>
<div class="form_field">
  <%= form.label :description %>
  <%= form.text_area :description %>
</div>
<div class="form_field">
  <%= form.label :edition %>
  <%= form.text_field :edition %>
</div>
<div class="form_field">
  <%= form.label "Genre" %>
  <%= form.text_field :genre %>
</div>
<div class="form_field">
  <%= form.label "Publisher" %>
  <%= form.collection_check_boxes(:publisher_ids, @users, :id, :username) %>
</div>
<div class="form_field">
  <%= form.label "Published Date" %>
  <%= form.date_select :published, start_year: 1900, end_year: Time.now.year, order: [:day, :month, :year], prompt: {day: "Day", month: "Month", year: "Year"} %>
</div>
<div class="form_field">
  <%= form.label "ISBN-10" %>
  <%= form.text_field :ISBN_10 %>
</div>
<div class="form_field">
  <%= form.label "ISBN-13" %>
  <%= form.text_field :ISBN_13 %>
</div>
<div class="form_field">
  <%= form.label "Bookshops" %>
  <%= form.collection_check_boxes(:shop_ids, @users, :id, :username) %>
</div>
<% if current_user.admin? %>
  <div class="form_field">
    <%= form.label :verified %>
    <%= form.check_box :verified %>
  </div>
<% end %>
<div class="form_field">
  <%= form.submit %>
</div>

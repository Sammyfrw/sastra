<div class="profile">
  "Insert Your Profile Picture Here"
</div>

<div class="profile">
  "Place Your Banner or Your Featured Showcase Item Here"
</div>

<div class="feed">
  <h3>News</h3>
  <%= link_to "New Announcement", [:new, current_user, :announcement] %>
  <%= link_to "All Announcements", [current_user, @announcement] %>
  <div class="announcements">
    <ul>
      <%= render current_user.ordered_announcements, user: current_user %>
    </ul>
  </div>
</div>

<div class="feed">
  <h3>Shoutbox</h3>
  <div class="shouts">
    <%= render current_user.ordered_shouts, user: current_user %>
  </div>
  <div class="shout_entry">
    <%= form_for [current_user, @shout] do |form| %>
      <%= form.text_area :body, size: "30x3" %>
      <%= form.submit "New shout" %>
    <% end %>
  </div>
</div>

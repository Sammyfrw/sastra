<h3>Admin</h3>
  <div class="admin_set">
    <h5>Add new admin</h5>
    <%= form_tag settings_admin_settings_path, method: :patch do  %>
      <%= collection_select "user", "id", @non_admins, :id, :username, prompt: "Select User" %>
      <%= submit_tag "Add Admin"%>
    <% end %>
  </div>

  <div class="admin_unset">
    <h5>Remove admin</h5>
    <%= form_tag settings_admin_settings_path, method: :patch do  %>
      <%= collection_select "user", "id", @admins, :id, :username, prompt: "Select User" %>
      <%= submit_tag "Remove Admin"%>
    <% end %>
  </div>

  <div class="user_lock">
    <h5>Lock user</h5>
    <%= form_tag settings_lock_users_path, method: :patch do  %>
      <%= collection_select "user", "id", @unlocked_users, :id, :username, prompt: "Select User" %>
      <%= submit_tag "Lock User"%>
    <% end %>
  </div>

  <div class="user_lock">
    <h5>Unlock user</h5>
    <%= form_tag settings_lock_users_path, method: :patch do  %>
      <%= collection_select "user", "id", @locked_users, :id, :username, prompt: "Select User" %>
      <%= submit_tag "Unlock User"%>
    <% end %>
  </div>

  <div class="flagged_content">
    <h5>Flagged Content</h5>
    <%= render @flags %>
  </div>
